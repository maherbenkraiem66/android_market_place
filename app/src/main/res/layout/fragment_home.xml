<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenu"
            android:textSize="16dp"

            android:layout_marginTop="24dp"

            />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom utilisateur"
            android:textSize="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre visiteurs"
            android:textSize="16dp"
            android:layout_marginStart="32dp"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textColor="@color/red"
            android:textSize="16dp"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/tech"
            android:layout_width="175dp"
            android:layout_height="75dp"
            android:layout_gravity="start"
            android:layout_marginStart="32dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:background="@drawable/corner_radius"
            android:textSize="10dp"
            android:textColor="#FFFFFF"

            >

            <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="SMARTPHONES &amp; WEARABLES"

                android:gravity="center"

                android:textSize="10dp"
                android:layout_gravity="center"
                android:textColor="#ffffff" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/electro"
            android:layout_width="175dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/electro"
            android:text="Créer compte"
            android:textColor="#FFFFFF">

            <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center"

                android:text="ELECTRONICS"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/groceries"
            android:layout_width="175dp"
            android:layout_height="75dp"
            android:layout_gravity="start"
            android:layout_marginStart="32dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:background="@drawable/groceries"

            android:textColor="#FFFFFF">

            <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center"

                android:text="GROCERIES"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/clean"
            android:layout_width="175dp"
            android:layout_height="75dp"
            android:layout_gravity="start"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="2dp"

            android:layout_marginBottom="2dp"
            android:background="@drawable/clean"
            android:text="Créer compte"
            android:textColor="#FFFFFF">

            <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center"

                android:text="CLEANING"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/freshf"
            android:layout_width="175dp"
            android:layout_height="75dp"
            android:layout_gravity="start"
            android:layout_marginStart="32dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/freshf"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Créer compte">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center"

                android:text="FRESH FOOD"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/frozenf"
            android:layout_width="175dp"
            android:layout_height="75dp"
            android:layout_gravity="start"
            android:layout_marginStart="2dp"

            android:layout_marginEnd="32dp"
            android:layout_marginTop="2dp"

            android:layout_marginBottom="2dp"
            android:background="@drawable/frozenf"
            android:text="Créer compte"
            android:gravity="center"
            android:textColor="#FFFFFF">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center"

                android:text="FROZEN FOOD"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="24dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produits les plus vendus"
            android:textColor="@color/red"
            android:textSize="16dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="24dp" />

        <include
            layout="@layout/card"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/card"
            android:layout_width="match_parent"
            android:layout_margin="5dp"

            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

    </LinearLayout>
</LinearLayout>